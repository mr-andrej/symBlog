{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <h2>{{ article.title }}</h2>
        <div class="metadata">Ecrit le {{ article.createdAt | date("d/m/y") }} a {{ article.createdAt | date("H:i") }}</div>
        <div class="content"><img src="{{ article.image }}" alt="Image">
            {{ article.content | raw }}
        </div>
    </article>

{% endblock %}